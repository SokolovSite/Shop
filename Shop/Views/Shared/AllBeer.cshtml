@using Shop.Controllers
@model Beer

<div class="col-lg-4">
    <h2>Пивко: @Model.Name</h2>
    <img class="img-thumbnail" src="@Model.Img" />
    <h3>@Model.ShortDesc</h3>
    <h5>Цена: @Model.Price.ToString("c")</h5>
    <p><a class="btn btn-danger" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.Id">Затарить</a></p>
</div>
